  {
    "id": "http2-rapid-reset-cve-2023-44487",
    "info": {
      "name": "HTTP/2 Rapid Reset Detection (CVE-2023-44487)",
      "severity": "critical",
      "category": "http2-bypass",
      "description": "Tests for HTTP/2 Rapid Reset vulnerability affecting IIS, AD FS, and other HTTP/2 servers. This vulnerability allows attackers to cause DoS by rapidly sending RST_STREAM frames.",
      "references": [
        "https://nvd.nist.gov/vuln/detail/CVE-2023-44487",
        "https://msrc.microsoft.com/update-guide/vulnerability/CVE-2023-44487",
        "https://www.cisa.gov/news-events/alerts/2023/10/10/http2-rapid-reset-vulnerability-cve-2023-44487"
      ],
      "tags": [
        "http2",
        "ddos",
        "cve-2023-44487",
        "iis",
        "adfs",
        "production-critical"
      ]
    },
    "payloads": [
      {
        "value": "?rapid_reset_test=true",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "?stream_limit_test=concurrent_streams",
        "encoding": "none",
        "method": "GET"
      }
    ],
    "matchers": [
      {
        "type": "response_status",
        "condition": "not_equals",
        "patterns": [
          "429",
          "503"
        ]
      },
      {
        "type": "response_header",
        "condition": "not_contains",
        "patterns": [
          "retry-after"
        ]
      }
    ]
  },
